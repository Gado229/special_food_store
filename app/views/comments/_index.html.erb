<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"</div>
        <p>
          <%= comment.content %>.<%= 'Commenter par' %>：<%= comment.user.name %>
          <% if current_user.id == comment.user_id %>        
        </p>
        <p>
          <%= link_to "Modifier le commentaire", edit_food_comment_path(food, comment), remote: true %>
          <%= link_to "Supprimer", food_comment_url(comment.food_id, comment.id),
                method: :delete, remote: true, data: { confirm: "Voulez-vous vraiment le supprimer ?"} %>
        </p>
        <% end %>
      </li>
    <% end %>
    <p><%= "Il y à #{time_ago_in_words(comment.created_at || Time.now)}" %></p>
  <% end %>
</ul>
