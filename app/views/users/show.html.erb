<div class="container">
  <h1>Profil de <%= @user.name %></h1>
  <p><%= @user.email %></p>

  <% if @foods.present? %>

  <% if current_user.id == @user.id %>

    <% @foods.each do |food| %>
    <% if food.image.file.nil? %>
      <% else %>
      <%= image_tag food.image.url, class: 'main_box_img' %>
    <% end %><br><br>
    <h4 class="task_name task_row">
      <%= food.name %><br>
    </h4>
    <%= food.description %>
      <%= food.price %>
      <br>
      <br>
<%= link_to 'show', food_path(food.id), class: 'fs-10 btn btn-outline-primary' %> |
<%= link_to 'edit', edit_food_path(food.id), class:'fs-10 btn btn-warning' %> |
<%= link_to 'destroy', food_path(food.id), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class:'fs-10 btn btn-outline-danger' %>
  <hr>
  <% end %>
  <% else %>
    <%= 'There is no task created by this user' %>
  <% end %>

<% end %>
<%= paginate @foods %>

</div>
