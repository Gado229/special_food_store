<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th>Food Cost</th>
      <th>Picture</th>
      <th>Phone</th>
      <th>Admin/User</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= link_to food.name, food_path(food.id) %></td>
        <td><%= food.name %></td>
        <td><%= food.description %></td>
        <td><span>$</span><%= food.price %></td>
        <td>
          <% if food.image.file.nil? %>
            <% else %>
            <%= image_tag food.image.url, class: 'main_box_img' %>
          <% end %>
        </td>

        <td><%= User.find(food.user_id).name%></td>

        <% if current_user.id == food.user.id %>

        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
        <td><%= link_to 'Voir details et commander', food_path(food.id), class:'btn btn-outline-primary' %></td>
        <% end %>
      </tr>
          <% end %>
  </tbody>
</table>

<br>

