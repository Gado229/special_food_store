<div class="row">
  <div class="col-sm-7">
    <div class="card">
      <div class="card-header">
        <h2>Changer le mot de passe</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.label :Mot_de_passe, "New password" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> charactères minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: "écrit un nouveau mot de passe ici" %>
          </div>

          <div class="field">
            <%= f.label :Mot_de_passe_de_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "réécrit le nouveau mot de passe ici" %>
          </div>

          <div class="actions">
            <%= f.submit "Changer mon mot de passe" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
