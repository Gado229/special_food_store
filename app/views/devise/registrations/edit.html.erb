<h2>Modifier <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "écrit ton email ici" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Mot_de_passe %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "écrit ton mot de passe ici" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> charactères minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Mot_de_passe_de_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "réécrit ton mot de passe pour confirmation ici" %>
  </div>

  <div class="field">
    <%= f.label :Mot_de_passe_actuel %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre à jour" %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Vous n'êtes pas satisfait ? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-tu sure ?" }, method: :delete %></p>

<%= link_to "Retour", :back %>
